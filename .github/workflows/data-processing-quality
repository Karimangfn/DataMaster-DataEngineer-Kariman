run-name: Validate Data Processing
name: Validate Data Processing

on:
  pull_request:
    branches:
      - develop
    paths:
      - 'data-processing/**'

jobs:
  detect_changes:
    name: ðŸ” Detect Modified Files
    runs-on: ubuntu-latest
    outputs:
      changed: ${{ steps.check.outputs.changed }}
    steps:
      - uses: actions/checkout@v4
        with:
          fetch-depth: 0

      - name: ðŸ“¥ Fetch develop branch
        run: git fetch origin develop

      - id: check
        run: |
          echo "Detecting changes in data-processing..."
          changed_files=$(git diff --name-only origin/develop...HEAD | grep '^data-processing/' || true)
          echo "Changed files: $changed_files"
          
          if [ -z "$changed_files" ]; then
            echo "No data-processing changes detected."
            echo "changed=false" >> $GITHUB_OUTPUT
          else
            echo "Data-processing changes detected."
            echo "changed=true" >> $GITHUB_OUTPUT
          fi

  precommit:
    name: ðŸ§¹ Run Pre-commit
    needs: detect_changes
    runs-on: ubuntu-latest
    if: needs.detect_changes.outputs.changed == 'true'
    steps:
      - uses: actions/checkout@v4
      - uses: actions/setup-python@v4
        with:
          python-version: '3.11'

      - name: ðŸ“¦ Install dependencies
        run: |
          pip install --upgrade pip
          pip install -r data-processing/requirements.txt
          pip install pre-commit

      - name: ðŸ§ª Run Pre-commit
        working-directory: data-processing
        run: make precommit

  tests:
    name: ðŸ§ª Run Unit Tests
    needs: [detect_changes, precommit]
    runs-on: ubuntu-latest
    if: needs.detect_changes.outputs.changed == 'true'
    steps:
      - uses: actions/checkout@v4
      - uses: actions/setup-python@v4
        with:
          python-version: '3.11'

      - name: ðŸ“¦ Install dependencies
        run: |
          pip install --upgrade pip
          pip install -r data-processing/requirements.txt
          pip install pytest pytest-cov

      - name: ðŸ§ª Run Tests
        working-directory: data-processing
        run: make test

  mypy:
    name: ðŸ” Run MyPy
    needs: [detect_changes, tests]
    runs-on: ubuntu-latest
    if: needs.detect_changes.outputs.changed == 'true'
    steps:
      - uses: actions/checkout@v4
      - uses: actions/setup-python@v4
        with:
          python-version: '3.11'

      - name: ðŸ“¦ Install dependencies
        run: |
          pip install --upgrade pip
          pip install -r data-processing/requirements.txt
          pip install mypy

      - name: ðŸ” Run MyPy
        working-directory: data-processing
        run: make mypy

  summary:
    name: ðŸ“‹ Workflow Summary
    runs-on: ubuntu-latest
    if: always()
    needs:
      - detect_changes
      - precommit
      - tests
      - mypy
    steps:
      - name: ðŸ“„ Generate Summary
        run: |
          echo "### ðŸ“‹ Data Processing Workflow Summary" >> $GITHUB_STEP_SUMMARY
          echo "" >> $GITHUB_STEP_SUMMARY

          if [ "${{ needs.detect_changes.outputs.changed }}" == "true" ]; then
            echo "#### ðŸ”§ Changed Path" >> $GITHUB_STEP_SUMMARY
            echo "- data-processing" >> $GITHUB_STEP_SUMMARY
            echo "" >> $GITHUB_STEP_SUMMARY
          else
            echo "#### ðŸ”§ Changed Path" >> $GITHUB_STEP_SUMMARY
            echo "- None" >> $GITHUB_STEP_SUMMARY
            echo "" >> $GITHUB_STEP_SUMMARY
          fi

          format_status() {
            case "$1" in
              success) echo "âœ… success" ;;
              failure) echo "âŒ failure" ;;
              skipped) echo "â­ï¸ skipped" ;;
              *) echo "â” $1" ;;
            esac
          }

          echo "#### ðŸ§ª Job Results" >> $GITHUB_STEP_SUMMARY
          echo "- Precommit: $(format_status "${{ needs.precommit.result }}")" >> $GITHUB_STEP_SUMMARY
          echo "- Tests: $(format_status "${{ needs.tests.result }}")" >> $GITHUB_STEP_SUMMARY
          echo "- MyPy: $(format_status "${{ needs.mypy.result }}")" >> $GITHUB_STEP_SUMMARY
